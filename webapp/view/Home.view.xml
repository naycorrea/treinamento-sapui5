<mvc:View
	controllerName="sapui5.project.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
>
	<Shell appWidthLimited="false">
		<Page
			id="page"
			title="{i18n>title}"
			class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
		>
			<content>
				<fb:FilterBar
					id="filterBar"
					search=".filterReports()"
					showClearButton="true"
					showClearOnFB="true"
					clear=""
					useToolbar="false"
					showFilterConfiguration="false"
				>
					<fb:filterGroupItems>
						<fb:FilterGroupItem
							id="teste"
							groupName="__$INTERNAL$"
							name="A"
							label="Nome"
							partOfCurrentVariant="true"
							visibleInFilterBar="true"
						>
							<fb:control>
								<Input id="nameFilterId"/>
							</fb:control>
						</fb:FilterGroupItem>
						<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="B"
							label="E-mail"
							partOfCurrentVariant="true"
							visibleInFilterBar="true"
						>
							<fb:control>
								<Input id="emailFilterId"/>
							</fb:control>
						</fb:FilterGroupItem>
						<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="C"
							label="E-mail"
							partOfCurrentVariant="true"
							visibleInFilterBar="true"
						>
							<fb:control>
								<Select id="statusFilterId">
									<items>
										<core:Item
											id="allOptions"
											key=""
											text="Todas as opções"
										/>
										<core:Item
											id="ativoId"
											key="ativo"
											text="Ativo"
										/>
										<core:Item
											id="inativoId"
											key="inativo"
											text="Inativo"
										/>
									</items>
								</Select>
							</fb:control>
						</fb:FilterGroupItem>
					</fb:filterGroupItems>
				</fb:FilterBar>
			</content>
			<Table
				id="idProductsTable"
				class="sapUiLargeMarginTop"
				inset="false"
				items="{
					path: '/ProductCollection',
					sorter: {
						path: 'Name'
					}
				}"
			>
				<headerToolbar>
					<OverflowToolbar id="TableToolbar">
						<content>
							<Title
								id="tableId"
								text="Usuários"
								level="H2"
							/>
							<ToolbarSpacer id="spacer"/>
							<Button
								id="createBtn"
								text="Novo usuário"
								icon="sap-icon://add"
								type="Emphasized"
								press=".openForm"
							/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column id="nameColumns">
						<Text
							id="nameText"
							text="Nome"
						/>
					</Column>
					<Column id="emailColumn">
						<Text
							id="emailText"
							text="E-mail"
						/>
					</Column>
					<Column>
						<Text text="Status"/>
					</Column>
					<Column id="editColumn">
						<Text text="Editar"/>
					</Column>
					<Column id="deleteColumn">
						<Text text="Deletar"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="listItem">
						<cells>
							<Text
								id="nameCell"
								text="{nome}"
							/>
							<Text
								id="emailCell"
								text="{email}"
							/>
							<Text
								id="statusCell"
								text="{status}"
							/>
							<Text text="{edit}"/>
							<Text text="{delete}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<Toolbar id="footer">
				<ToolbarSpacer id="spacerFooter"/>
				<content>
					<Button
						id="prevButton"
						enabled="false"
						icon="sap-icon://navigation-left-arrow"
						press=""
					/>
					<Input
						id="pageInput"
						editable="true"
						value="{=${PageInfo>/currentPage}}"
						width="50px"
						submit=""
						tooltip="{i18n>TooltipPageInput}"
					/>
					<Text
						id="totalPageId"
						text="de 0"
					/>
					<Button
						id="nextButton"
						enabled="false"
						icon="sap-icon://navigation-right-arrow"
						press=""
					/>
				</content>
			</Toolbar>
		</Page>
	</Shell>
</mvc:View>